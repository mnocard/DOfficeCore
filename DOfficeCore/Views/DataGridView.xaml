<UserControl
    x:Class="DOfficeCore.Views.DataGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOfficeCore.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <GroupBox>
        <GroupBox.Header>
            <DockPanel LastChildFill="True">
                <Button
                    x:Name="btnAddNode"
                    DockPanel.Dock="Left"
                    ToolTip="Добавить новый элемент">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="PlusBoxOutline" />
                </Button>
                <Button
                    x:Name="btnSearchNode"
                    DockPanel.Dock="Left"
                    ToolTip="Удалить выбранный элемент">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="Magnify" />
                </Button>
                <Button
                    x:Name="btnDeleteNode"
                    DockPanel.Dock="Left"
                    ToolTip="Удалить выбранный элемент">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="TrashCanOutline" />
                </Button>
                <Button
                    x:Name="btnSaveXML"
                    Command="{Binding SaveDataToFileCommand}"
                    CommandParameter="{Binding Path=Items, ElementName=dgDataTree}"
                    DockPanel.Dock="Right"
                    ToolTip="Сохранить">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="ContentSaveAllOutline" />
                </Button>
                <TextBox
                    x:Name="tbElementData"
                    Width="Auto"
                    Margin="5,0"
                    VerticalContentAlignment="Center"
                    Text="Введите текст" />
            </DockPanel>
        </GroupBox.Header>
        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                x:Name="dgCodes"
                Grid.Column="0"
                Margin="0,0,5,0"
                AutoGenerateColumns="False"
                Background="#FF9E9E9E"
                ItemsSource="{Binding Diagnoses}"
                >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Code}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Шифр" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <GridSplitter
                Grid.Column="0"
                MinWidth="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Opacity="0" />
            <DataGrid
                x:Name="dgBlocksNames"
                Grid.Column="1"
                Margin="0,0,5,0"
                AutoGenerateColumns="False"
                Background="#FF9E9E9E"
                >
                <DataGrid.Columns>
                    <DataGridTextColumn>
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Раздел" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <GridSplitter
                Grid.Column="1"
                MinWidth="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Opacity="0" />
            <DataGrid
                x:Name="dgLinesContent"
                Grid.Column="2"
                AutoGenerateColumns="False"
                Background="#FF9E9E9E" >
                <DataGrid.Columns>
                    <DataGridTextColumn>
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Элемент" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
