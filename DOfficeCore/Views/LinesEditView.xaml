<UserControl
    x:Class="DOfficeCore.Views.LinesEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DOfficeCore.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid Margin="-3" Background="#FFD9D7D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="#FF686868"
            Orientation="Horizontal">
            <Button
                Margin="10,0"
                Command="{Binding OpenFileCommand}"
                ToolTip="Выбрать документ docx">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    FlowDirection="RightToLeft"
                    Kind="FileDocumentOutline" />
            </Button>
            <Button
                Margin="10,0"
                Command="{Binding GetTextFromClipboardCommand}"
                ToolTip="Вставить скопированный текст из буфера обмена">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    FlowDirection="RightToLeft"
                    Kind="InsertComment" />
            </Button>
            <Button
                x:Name="btnSaveXML"
                Margin="10,0"
                Command="{Binding SaveDataToFileCommand, UpdateSourceTrigger=PropertyChanged}"
                DockPanel.Dock="Right"
                ToolTip="Сохранить коллекцию">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Kind="ContentSaveAllOutline" />
            </Button>
        </StackPanel>
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Background="#FF9E9E9E">
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,5"
                Command="{Binding ClearListBoxCommand}"
                Content="Очистить таблицу"
                DockPanel.Dock="Bottom"
                ToolTip="Удалить все элементы из первой таблицы" />
            <ListBox
                Background="#FF9E9E9E"
                ItemsSource="{Binding RawLines, UpdateSourceTrigger=PropertyChanged}"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <GridSplitter
            Grid.Row="1"
            Grid.Column="0"
            MinWidth="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="#FF686868"
            ShowsPreview="False" />
        <DockPanel
            Grid.Row="1"
            Grid.Column="1"
            MinWidth="100"
            Background="#FF9E9E9E">
            <DockPanel
                Margin="3"
                DockPanel.Dock="Top"
                LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <Button Margin="3,0" Command="{Binding AddNewDiagnosisCommand}">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="AddCircleOutline" />
                    </Button>
                    <Button
                        x:Name="btnEditDiagnosis"
                        Command="{Binding EditElementCommand, UpdateSourceTrigger=PropertyChanged}"
                        CommandTarget="{Binding ElementName=tbDiagnosis, Path=Text}"
                        Cursor="Hand"
                        ToolTip="Редактировать выбранный элемент">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="PencilOutline" />
                    </Button>
                    <Button Margin="3,0" Command="{Binding RemoveDiagnosisCommand}">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="TrashCanOutline" />
                    </Button>
                </StackPanel>
                <TextBox
                    x:Name="tbDiagnosis"
                    Margin="3,5"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Введите диагноз"
                    DockPanel.Dock="Bottom"
                    Text="{Binding DiagnosisTextBox, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <ListBox
                x:Name="DiagnosisCodes"
                MinHeight="150"
                Background="#FF9E9E9E"
                DockPanel.Dock="Top"
                ItemsSource="{Binding DiagnosisCode}"
                SelectionMode="Single" />
            <DockPanel
                Margin="3"
                Background="#FF9E9E9E"
                DockPanel.Dock="Top"
                LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <Button Margin="3,0">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="AddCircleOutline" />
                    </Button>
                    <Button
                        x:Name="btnEditBlock"
                        Command="{Binding EditElementCommand, UpdateSourceTrigger=PropertyChanged}"
                        CommandTarget="{Binding ElementName=tbDiagnosis, Path=Text}"
                        Cursor="Hand"
                        ToolTip="Редактировать выбранный элемент">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="PencilOutline" />
                    </Button>
                    <Button Margin="3,0">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="TrashCanOutline" />
                    </Button>
                </StackPanel>
                <TextBox
                    Margin="3,5"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Введите раздел"
                    Text="{Binding BlockTextBox, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <ListBox
                MinHeight="200"
                Background="#FF9E9E9E"
                ItemsSource="{Binding BlocksNames}"
                SelectionMode="Single" />
        </DockPanel>
        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            MinWidth="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="#FF686868"
            ShowsPreview="False" />
        <DockPanel
            Grid.Row="1"
            Grid.Column="2"
            Background="#FF9E9E9E">
            <DockPanel
                Margin="3"
                DockPanel.Dock="Top"
                LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <Button
                        Margin="3,0"
                        Command="{Binding AddNewDiagnosisCommand}"
                        DockPanel.Dock="Right">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="AddCircleOutline" />
                    </Button>
                    <Button
                        x:Name="btnEditLine"
                        Command="{Binding EditElementCommand, UpdateSourceTrigger=PropertyChanged}"
                        CommandTarget="{Binding ElementName=tbDiagnosis, Path=Text}"
                        Cursor="Hand"
                        ToolTip="Редактировать выбранный элемент">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="PencilOutline" />
                    </Button>
                    <Button
                        Margin="3,0"
                        Command="{Binding RemoveDiagnosisCommand}"
                        DockPanel.Dock="Right">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            Kind="TrashCanOutline" />
                    </Button>
                </StackPanel>
                <TextBox
                    Margin="3,0"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Введите предложение"
                    Text="{Binding DiagnosisTextBox, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <ListBox
                Grid.Row="1"
                Grid.Column="2"
                Background="#FF9E9E9E"
                ItemsSource="{Binding LinesNames}"
                SelectionMode="Single" />
        </DockPanel>
    </Grid>
</UserControl>
