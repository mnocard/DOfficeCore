<Window
    x:Class="DOfficeCore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:DOfficeCore.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:DOfficeCore.Data"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DOfficeCore"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:DOfficeCore.ViewModels"
    Title="{Binding Title}"
    MinWidth="800"
    MinHeight="450"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <TabControl BorderThickness="0" TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Background" Value="#20232A" />
                </Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border
                                    x:Name="Border"
                                    Margin="5,5,0,0"
                                    BorderBrush="Black"
                                    BorderThickness="1,1,0,1"
                                    CornerRadius="10,0,0,10">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Margin="5,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                        <Setter TargetName="Border" Property="Margin" Value="5,5,-1,0" />
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                        <Setter TargetName="Border" Property="BorderBrush" Value="White" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="Gray" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,2,1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <materialDesign:PackIcon Kind="NotebookOutline" Width="48" Height="48"/>
                </TabItem.Header>
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Background" Value="White" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF686868"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="cbDiaryDate"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Content="Добавить дату" />
                        <DatePicker
                            x:Name="DiaryDate"
                            MinWidth="100"
                            Margin="5,3,0,0"
                            VerticalAlignment="Center"
                            IsDropDownOpen="False"
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            SelectedDateFormat="Short" />
                        <CheckBox
                            x:Name="cbDiaryTime"
                            Margin="10,0"
                            Content="Добавить время" />
                        <materialDesign:TimePicker
                            x:Name="DiaryTime"
                            Margin="5,3,0,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Is24Hours="True"
                            SelectedTime="10:30" />
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <DockPanel LastChildFill="True">
                            <GroupBox>
                                <GroupBox.Header>
                                    <DockPanel LastChildFill="True">
                                        <Button
                                            x:Name="btnAddNode"
                                            DockPanel.Dock="Left"
                                            ToolTip="Добавить новый элемент">
                                            <materialDesign:PackIcon Kind="PlusBoxOutline" Width="24" Height="24"/>
                                        </Button>
                                        <Button
                                            x:Name="btnSearchNode"
                                            DockPanel.Dock="Left"
                                            ToolTip="Удалить выбранный элемент">
                                            <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24"/>
                                        </Button>
                                        <Button
                                            x:Name="btnDeleteNode"
                                            DockPanel.Dock="Left"
                                            ToolTip="Удалить выбранный элемент">
                                            <materialDesign:PackIcon Kind="TrashCanOutline" Width="24" Height="24"/>
                                        </Button>
                                        <Button
                                            x:Name="btnSaveXML"
                                            Command="{Binding SaveDataToFileCommand}"
                                            CommandParameter="{Binding Path=Items, ElementName=dgDataTree}"
                                            DockPanel.Dock="Right"
                                            ToolTip="Сохранить">
                                            <materialDesign:PackIcon Kind="ContentSaveAllOutline" Width="24" Height="24"/>
                                        </Button>
                                        <TextBox
                                            x:Name="tbElementData"
                                            Width="Auto"
                                            Margin="5,0"
                                            VerticalContentAlignment="Center"
                                            Text="Введите текст" />
                                    </DockPanel>
                                </GroupBox.Header>
                                <DataGrid
                                    x:Name="dgDataTree"
                                    AutoGenerateColumns="False"
                                    ItemsSource="{Binding Diagnoses, Mode=TwoWay}"
                                    SelectionMode="Single"
                                    SelectionUnit="Cell">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            x:Name="dgcCode"
                                            Binding="{Binding Code}"
                                            Header="Диагнозы">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDown">
                                                    <i:InvokeCommandAction Command="{Binding GetBlocksCommand}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Блоки" />
                                        <DataGridTextColumn Header="Строки" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </DockPanel>
                        <GridSplitter
                            Grid.Column="0"
                            MinWidth="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Opacity="0"
                            ShowsPreview="False" />
                        <GroupBox Grid.Column="1" MinWidth="300">
                            <GroupBox.Header>
                                <UniformGrid Rows="1">
                                    <Button>
                                        <materialDesign:PackIcon Kind="Dice5Outline" Width="24" Height="24"/>
                                    </Button>
                                    <Button
                                        x:Name="Copy"
                                        Command="{Binding CopyTextCommand}"
                                        CommandParameter="{Binding Text, ElementName=tbDiary}"
                                        ToolTip="Копировать текст">
                                        <materialDesign:PackIcon Kind="ContentCopy" Width="24" Height="24"/>
                                    </Button>
                                    <Button
                                        x:Name="Edit"
                                        Command="{Binding EditTextCommand}"
                                        CommandTarget="{Binding ElementName=tbDiary}"
                                        ToolTip="Редактировать текст">
                                        <materialDesign:PackIcon Kind="PencilOutline" Width="24" Height="24"/>
                                    </Button>
                                    <GridSplitter IsEnabled="False" />
                                    <Button x:Name="Clear" ToolTip="Очистить поле">
                                        <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                                    </Button>
                                </UniformGrid>
                            </GroupBox.Header>
                            <TextBox
                                x:Name="tbDiary"
                                Grid.Column="1"
                                MinWidth="300"
                                AcceptsReturn="True"
                                IsReadOnly="{Binding EnableTextBox}"
                                Text="Hallo"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <materialDesign:PackIcon Kind="UserOutline" Width="48" Height="48"/>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>

