<Window
    x:Class="DOfficeCore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:DOfficeCore.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:DOfficeCore.Data"
    xmlns:local="clr-namespace:DOfficeCore"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:DOfficeCore.ViewModels"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    Title="{Binding Title}"
    MinWidth="800"
    MinHeight="450"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <TabControl BorderThickness="0" TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Background" Value="#20232A" />
                </Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border
                                    x:Name="Border"
                                    Margin="5,5,0,0"
                                    BorderBrush="Black"
                                    BorderThickness="1,1,0,1"
                                    CornerRadius="10,0,0,10">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Margin="5,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                        <Setter TargetName="Border" Property="Margin" Value="5,5,-1,0" />
                                        <Setter TargetName="Border" Property="Background" Value="White" />
                                        <Setter TargetName="Border" Property="BorderBrush" Value="White" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="Gray" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,2,1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <Viewbox Width="48" Height="48">
                        <Canvas Width="24" Height="24">
                            <Path Data="M17,4V10L15,8L13,10V4H9V20H19V4H17M3,7V5H5V4C5,2.89 5.9,2 7,2H19C20.05,2 21,2.95 21,4V20C21,21.05 20.05,22 19,22H7C5.95,22 5,21.05 5,20V19H3V17H5V13H3V11H5V7H3M5,5V7H7V5H5M5,19H7V17H5V19M5,13H7V11H5V13Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </TabItem.Header>
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Background" Value="White" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF9E9E9E"
                        
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="cbDiaryDate"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Content="Добавить дату" />
                        <DatePicker
                            x:Name="DiaryDate"
                            MinWidth="100"
                            Margin="5,3,0,0"
                            VerticalAlignment="Center"
                            IsDropDownOpen="False"
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            SelectedDateFormat="Short" />
                        <CheckBox
                            x:Name="cbDiaryTime"
                            Margin="10,0"
                            Content="Добавить время"/>
                        <materialDesign:TimePicker
                            x:Name="DiaryTime"
                            Margin="5,3,0,0"
                            VerticalAlignment="Center"
                            Is24Hours="True"
                            SelectedTime="10:30" Background="Transparent" />
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <DockPanel LastChildFill="True">
                            <GroupBox>
                                <GroupBox.Header>
                                    <DockPanel LastChildFill="True"  >
                                        <Button x:Name="btnAddNode" ToolTip="Добавить новый элемент" DockPanel.Dock="Left">
                                            <Viewbox Width="24" Height="24">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M19,19V5H5V19H19M19,3A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5C3,3.89 3.9,3 5,3H19M11,7H13V11H17V13H13V17H11V13H7V11H11V7Z" Fill="Black" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button x:Name="btnSearchNode" ToolTip="Удалить выбранный элемент" DockPanel.Dock="Left">
                                            <Viewbox Width="24" Height="24">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" Fill="Black" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button x:Name="btnDeleteNode" ToolTip="Удалить выбранный элемент" DockPanel.Dock="Left">
                                            <Viewbox Width="24" Height="24">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19M8,9H16V19H8V9M15.5,4L14.5,3H9.5L8.5,4H5V6H19V4H15.5Z" Fill="Black" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button
                                            x:Name="btnSaveXML"
                                            Command="{Binding SaveDataToFileCommand}"
                                            CommandParameter="{Binding Path=Items, ElementName=treeViewData}"
                                            ToolTip="Сохранить" DockPanel.Dock="Right">
                                            <Viewbox Width="24" Height="24">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M1 7H3V21H17V23H3C1.9 23 1 22.11 1 21V7M19 1H7C5.89 1 5 1.9 5 3V17C5 18.1 5.89 19 7 19H21C22.1 19 23 18.1 23 17V5L19 1M21 17H7V3H18.17L21 5.83V17M14 10C12.34 10 11 11.34 11 13S12.34 16 14 16 17 14.66 17 13 15.66 10 14 10M8 4H17V8H8V4Z" Fill="Black" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <TextBox x:Name="tbElementData" Width="Auto" Margin="5, 0" Text="Введите текст" VerticalContentAlignment="Center"/>
                                    </DockPanel>
                                </GroupBox.Header>
                                <TreeView
                                    x:Name="treeViewData"
                                    FlowDirection="LeftToRight"
                                    Foreground="Black"
                                    ItemsSource="{Binding Diagnoses}"
                                    MinWidth="300"
                                    >
                                    <!--Контекстное меню для дерева
                                    <TreeView.ContextMenu x:Uid="cxt">
                                        <ContextMenu Name="ContextMenu">
                                            <MenuItem Name="AddNew" Header="Add" ></MenuItem>
                                            <Separator/>
                                            <MenuItem Name="CopyItem" Header="Copy(Ctrl + C)"  ></MenuItem>
                                        </ContextMenu>
                                    </TreeView.ContextMenu>-->
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Path=Blocks}">
                                            <TextBlock Text="{Binding Path=Code}" />
                                            <HierarchicalDataTemplate.ItemTemplate>
                                                <HierarchicalDataTemplate ItemsSource="{Binding Path=Lines}">
                                                    <TextBlock Text="{Binding Path=Name}" />
                                                    <HierarchicalDataTemplate.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" />
                                                        </DataTemplate>
                                                    </HierarchicalDataTemplate.ItemTemplate>
                                                </HierarchicalDataTemplate>
                                            </HierarchicalDataTemplate.ItemTemplate>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </GroupBox>
                        </DockPanel>
                        <GridSplitter
                            Grid.Column="0"
                            MinWidth="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Opacity="0"
                            ShowsPreview="False" />
                        <GroupBox Grid.Column="1" MinWidth="300">
                            <GroupBox.Header>
                                <UniformGrid Rows="1">
                                    <Button>
                                        <Viewbox Width="24" Height="32">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M19 5V19H5V5H19M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3M7.5 6C6.7 6 6 6.7 6 7.5S6.7 9 7.5 9 9 8.3 9 7.5 8.3 6 7.5 6M16.5 15C15.7 15 15 15.7 15 16.5C15 17.3 15.7 18 16.5 18C17.3 18 18 17.3 18 16.5C18 15.7 17.3 15 16.5 15M16.5 6C15.7 6 15 6.7 15 7.5S15.7 9 16.5 9C17.3 9 18 8.3 18 7.5S17.3 6 16.5 6M12 10.5C11.2 10.5 10.5 11.2 10.5 12S11.2 13.5 12 13.5 13.5 12.8 13.5 12 12.8 10.5 12 10.5M7.5 15C6.7 15 6 15.7 6 16.5C6 17.3 6.7 18 7.5 18S9 17.3 9 16.5C9 15.7 8.3 15 7.5 15Z" Fill="Black" />
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                    <Button
                                        x:Name="Copy"
                                        Command="{Binding CopyTextCommand}"
                                        CommandParameter="{Binding Text, ElementName=tbDiary}"
                                        ToolTip="Копировать текст">
                                        <Viewbox Width="24" Height="24">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" Fill="Black" />
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                    <Button
                                        x:Name="Edit"
                                        Command="{Binding EditTextCommand}"
                                        CommandTarget="{Binding ElementName=tbDiary}"
                                        ToolTip="Редактировать текст">
                                        <Viewbox Width="24" Height="24">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M10 20H6V4H13V9H18V12.1L20 10.1V8L14 2H6C4.9 2 4 2.9 4 4V20C4 21.1 4.9 22 6 22H10V20M20.2 13C20.3 13 20.5 13.1 20.6 13.2L21.9 14.5C22.1 14.7 22.1 15.1 21.9 15.3L20.9 16.3L18.8 14.2L19.8 13.2C19.9 13.1 20 13 20.2 13M20.2 16.9L14.1 23H12V20.9L18.1 14.8L20.2 16.9Z" Fill="Black" />
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                    <GridSplitter IsEnabled="False" />
                                    <Button x:Name="Clear" ToolTip="Очистить поле">
                                        <Viewbox Width="24" Height="24">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19M8,9H16V19H8V9M15.5,4L14.5,3H9.5L8.5,4H5V6H19V4H15.5Z" Fill="Black" />
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                </UniformGrid>
                            </GroupBox.Header>
                            <TextBox
                                x:Name="tbDiary"
                                Grid.Column="1"
                                AcceptsReturn="True"
                                IsReadOnly="{Binding EnableTextBox}"
                                Text="Hallo"
                                TextWrapping="Wrap"
                                MinWidth="300"
                                VerticalScrollBarVisibility="Auto" />
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Viewbox Width="48" Height="48">
                        <Canvas Width="24" Height="24">
                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7.07,18.28C7.5,17.38 10.12,16.5 12,16.5C13.88,16.5 16.5,17.38 16.93,18.28C15.57,19.36 13.86,20 12,20C10.14,20 8.43,19.36 7.07,18.28M18.36,16.83C16.93,15.09 13.46,14.5 12,14.5C10.54,14.5 7.07,15.09 5.64,16.83C4.62,15.5 4,13.82 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,13.82 19.38,15.5 18.36,16.83M12,6C10.06,6 8.5,7.56 8.5,9.5C8.5,11.44 10.06,13 12,13C13.94,13 15.5,11.44 15.5,9.5C15.5,7.56 13.94,6 12,6M12,11A1.5,1.5 0 0,1 10.5,9.5A1.5,1.5 0 0,1 12,8A1.5,1.5 0 0,1 13.5,9.5A1.5,1.5 0 0,1 12,11Z" Fill="Black" />
                        </Canvas>
                    </Viewbox>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>

