<Window
    x:Class="DOfficeCore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmd="clr-namespace:DOfficeCore.Infrastructure.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:views="clr-namespace:DOfficeCore.Views"
    Title="{Binding Title}"
    MinWidth="800"
    MinHeight="450"
    Background="{DynamicResource MaterialDesignPaper}"
    DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel Background="#FF686868" LastChildFill="True">
        <TabControl SelectedIndex="1" TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Background" Value="#FF686868" />
                </Style>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border
                                    x:Name="Border"
                                    Margin="5,5,0,0"
                                    BorderBrush="#FF686868"
                                    BorderThickness="1,1,0,1"
                                    CornerRadius="10,0,0,10">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Margin="5,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FFC2C0C0" />
                                        <Setter TargetName="Border" Property="Margin" Value="5,5,-1,0" />
                                        <Setter TargetName="Border" Property="Background" Value="#FFC2C0C0" />
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#FFC2C0C0" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="Gray" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,2,1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Height="33" Visibility="Hidden" />
            <TabItem>
                <TabItem.Header>
                    <materialDesign:PackIcon
                        Width="48"
                        Height="48"
                        Kind="NotebookOutline">
                        <materialDesign:PackIcon.Background>
                            <ImageBrush />
                        </materialDesign:PackIcon.Background>
                    </materialDesign:PackIcon>
                </TabItem.Header>
                <Grid Margin="-3">
                    <Grid.Resources>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Background" Value="#FFD9D7D7" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="0" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF686868"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="cbDiaryDate"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Content="Добавить дату" />
                        <DatePicker
                            x:Name="DiaryDate"
                            MinWidth="100"
                            Margin="5,3,0,0"
                            VerticalAlignment="Center"
                            IsDropDownOpen="False"
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            SelectedDateFormat="Short" />
                        <CheckBox
                            x:Name="cbDiaryTime"
                            Margin="10,0"
                            Content="Добавить время" />
                        <materialDesign:TimePicker
                            x:Name="DiaryTime"
                            Margin="5,3,0,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Is24Hours="True"
                            SelectedTime="10:30" />
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" MinWidth="500"/>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel LastChildFill="True">
                            <views:DataGridView />
                        </DockPanel>
                        <GridSplitter
                            Grid.Column="0"
                            MinWidth="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Opacity="0"
                            ShowsPreview="False" />
                        <GroupBox Grid.Column="1" MinWidth="300">
                            <GroupBox.Header>
                                <UniformGrid Rows="1">
                                    <Button Background="#FFC2C0C0">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="Dice5Outline" />
                                    </Button>
                                    <Button
                                        x:Name="Copy"
                                        Command="{Binding CopyTextCommand}"
                                        CommandParameter="{Binding Text, ElementName=tbDiary}"
                                        ToolTip="Копировать текст">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="ContentCopy" />
                                    </Button>
                                    <Button
                                        x:Name="Edit"
                                        Command="{Binding EditTextCommand}"
                                        CommandTarget="{Binding ElementName=tbDiary}"
                                        ToolTip="Редактировать текст">
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="PencilOutline" />
                                    </Button>
                                    <GridSplitter IsEnabled="False" />
                                    <Button
                                        x:Name="Clear"
                                        CommandParameter="{Binding ElementName=tbDiary}"
                                        ToolTip="Очистить поле">
                                        <Button.Command>
                                            <cmd:ClearDiaryBoxCommand />
                                        </Button.Command>
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            Kind="Close" />
                                    </Button>
                                </UniformGrid>
                            </GroupBox.Header>
                            <TextBox
                                x:Name="tbDiary"
                                Grid.Column="1"
                                MinWidth="300"
                                AcceptsReturn="True"
                                IsReadOnly="{Binding EnableTextBox}"
                                materialDesign:HintAssist.Hint="Введите текст"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <materialDesign:PackIcon
                        Width="48"
                        Height="48"
                        Kind="UserOutline" />
                </TabItem.Header>
                <Grid Margin="-3" Background="#FFD9D7D7" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>

